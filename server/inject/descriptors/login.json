{
  "type": "object",
  "comment": "Login",
  "properties": {
    "username": {
      "type": "string",
      "label": "username",
      "update": {
        "type": "action",
        "action": [
          "submit"
        ]
      },
      "selector": "[name=\"username\"]",
      "control": "text"
    },
    "password": {
      "type": "string",
      "label": "password",
      "update": {
        "type": "action",
        "action": [
          "submit"
        ]
      },
      "selector": "[name=\"password\"]",
      "control": "text"
    },
    "errorMessage": {
      "type": "string",
      "label": "errorMessage",
      "update": {
        "type": "none"
      },
      "selector": "font",
      "control": "property.innerText",
      "selectContains": "Your account may be disabled or blocked or the username/password you entered is incorrect."
    },
    "submit": {
      "type": "action",
      "parameters": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "selector": "input[value=\"Login\"]",
      "control": "action.button"
    },
    "IsLogin": {
      "type": "identifier",
      "control": "exists",
      "selector": ".form-title",
      "selectContains": "Login"
    }
  },
  "connect": []
}
